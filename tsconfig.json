{
  "include": ["./src"],
  "compilerOptions": {
    "target": "es2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true
  },
  "mdx": {
    "checkMdx": true
  }
}
